{
  "name": "@webcomponents-preview/client",
  "description": "A storybook alike preview application for web components.",
  "version": "0.5.11",
  "license": "MIT",
  "author": {
    "name": "David Enke",
    "email": "david@enke.dev"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "customElements": "dist/custom-elements.json",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint --ext .ts src",
    "lint:ci": "eslint --ext .ts src --format junit --output-file reports/lint-results.xml",
    "clean": "shx rm -rf dist",
    "generate:index:barrel": "barrelsby --config .barrelsby.json",
    "generate:index:fixup": "shx sed -i \"s/';/\\.js';/g\" src/index.ts",
    "generate:index": "run-s -lns generate:index:*",
    "generate:config": "typescript-json-schema src/utils/config.utils.ts Config --ignoreErrors --out src/config.schema.json",
    "generate:docs": "cross-env NODE_OPTIONS='--loader ts-node/esm --no-warnings' cem analyze --config custom-elements-manifest.config.ts",
    "generate": "run-p -lns generate:*",
    "test": "wtr",
    "test:ci": "wtr --ci",
    "test:watch": "wtr --watch",
    "prebuild": "run-s -lns clean generate",
    "build:components": "node --loader ts-node/esm --no-warnings esbuild.run.ts --ci",
    "build": "run-p -lns build:*",
    "predev": "run-p -lns clean generate",
    "dev:components": "node --loader ts-node/esm --no-warnings esbuild.run.ts --watch --port 8087",
    "dev:docs": "npm run generate:docs -- --watch",
    "dev": "run-p -lns dev:*"
  },
  "dependencies": {
    "@open-wc/lit-helpers": "0.6.0",
    "css.gg": "2.1.1",
    "element-internals-polyfill": "1.3.9",
    "lit": "3.1.0",
    "lit-code": "0.1.12",
    "marked": "11.0.0",
    "marked-highlight": "2.0.9",
    "prismjs": "1.29.0",
    "urlpattern-polyfill": "9.0.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "0.9.0",
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@types/esbuild-copy-static-files": "0.1.3",
    "@types/marked": "5.0.2",
    "@types/node": "20.10.3",
    "@types/postcss-preset-env": "7.7.0",
    "@types/pretty": "2.0.3",
    "@types/prismjs": "1.26.3",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "@web/dev-server-esbuild": "1.0.1",
    "@web/test-runner": "0.18.0",
    "@web/test-runner-junit-reporter": "0.7.0",
    "@web/test-runner-puppeteer": "0.15.0",
    "@webcomponents-preview/cem-plugin-examples": "0.0.39",
    "@webcomponents-preview/cem-plugin-generate-readmes": "0.0.39",
    "@webcomponents-preview/cem-plugin-grouping": "0.0.39",
    "autoprefixer": "10.4.16",
    "barrelsby": "2.8.1",
    "cross-env": "7.0.3",
    "custom-elements-manifest": "2.0.0",
    "esbuild": "0.19.8",
    "esbuild-copy-static-files": "0.1.0",
    "esbuild-plugin-d.ts": "1.1.0",
    "esbuild-sass-plugin": "2.16.0",
    "eslint": "8.55.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-tsdoc": "0.2.17",
    "identity-obj-proxy": "3.0.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.32",
    "postcss-preset-env": "9.3.0",
    "shx": "0.3.4",
    "ts-node": "10.9.1",
    "tsc-alias": "1.8.8",
    "typedoc": "0.25.4",
    "typescript": "5.3.3",
    "typescript-json-schema": "0.62.0"
  }
}
