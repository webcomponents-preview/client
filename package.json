{
  "name": "@webcomponents-preview/client",
  "description": "A storybook alike preview application for web components.",
  "version": "0.0.42",
  "license": "MIT",
  "author": {
    "name": "David Enke",
    "email": "david@enke.dev"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "customElements": "dist/custom-elements.json",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint --ext .ts src",
    "clean": "shx rm -rf dist",
    "generate:barrel": "barrelsby --config .barrelsby.json",
    "generate:config": "typescript-json-schema src/utils/config.utils.ts Config --ignoreErrors --out src/config.schema.json",
    "generate": "run-p -lns generate:*",
    "docs": "cross-env NODE_OPTIONS='--loader ts-node/esm' NODE_NO_WARNINGS=1 cem analyze --config custom-elements-manifest.config.ts",
    "test": "jest",
    "test:ci": "jest --ci --passWithNoTests --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "prebuild": "run-s -lns clean generate",
    "build:components": "ts-node esbuild.config.ts --ci",
    "build:types": "tsc --project tsconfig.types.json",
    "build:docs": "npm run docs",
    "build": "run-p -lns build:*",
    "predev": "run-p -lns clean generate",
    "dev:components": "ts-node esbuild.config.ts --watch --port 8087",
    "dev:types": "npm run build:types -- --watch",
    "dev:docs": "npm run docs -- --watch",
    "dev": "run-p -lns dev:*"
  },
  "dependencies": {
    "@open-wc/lit-helpers": "0.5.1",
    "css.gg": "2.0.0",
    "element-internals-polyfill": "1.3.5",
    "github-markdown-css": "5.2.0",
    "highlight.js": "11.8.0",
    "lit": "2.7.4",
    "marked": "5.0.2",
    "urlpattern-polyfill": "8.0.2"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "0.8.3",
    "@testing-library/dom": "9.3.0",
    "@testing-library/jest-dom": "5.16.5",
    "@types/esbuild-copy-static-files": "0.1.0",
    "@types/jest": "29.5.1",
    "@types/marked": "5.0.0",
    "@types/node": "18.16.15",
    "@types/postcss-preset-env": "7.7.0",
    "@types/pretty": "2.0.1",
    "@typescript-eslint/eslint-plugin": "5.59.7",
    "@typescript-eslint/parser": "5.59.7",
    "@webcomponents-preview/cem-plugin-examples": "0.0.35",
    "@webcomponents-preview/cem-plugin-generate-readmes": "0.0.35",
    "@webcomponents-preview/cem-plugin-grouping": "0.0.35",
    "autoprefixer": "10.4.14",
    "barrelsby": "2.8.0",
    "cross-env": "7.0.3",
    "custom-elements-manifest": "2.0.0",
    "esbuild": "0.17.19",
    "esbuild-copy-static-files": "0.1.0",
    "esbuild-sass-plugin": "2.9.0",
    "eslint": "8.41.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-tsdoc": "0.2.17",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "jest-junit": "16.0.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.23",
    "postcss-preset-env": "8.4.1",
    "shx": "0.3.4",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typedoc": "0.24.7",
    "typescript": "5.0.4",
    "typescript-json-schema": "0.56.0"
  },
  "engines": {
    "node": "^18"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "test-unit.xml",
    "usePathForSuiteName": true
  }
}
