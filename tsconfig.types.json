{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["globals.d.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
